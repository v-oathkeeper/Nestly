<% layout("/layouts/boilerplate") %>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <h2 class="mb-4 text-center">Listing Details</h2>

                <div class="card shadow-sm border-0">
                    <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing Image">
                    <div class="card-body">
                        <h4 class="card-title mb-3">
                            <%= listing.title %>
                        </h4>
                        <p class="card-text mb-4">
                            <%= listing.description %>
                        </p>
                        <div class="row">
                            <div class="col-sm-4 mb-2">
                                <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %>
                            </div>
                            <div class="col-sm-4 mb-2">
                                <strong>Location:</strong>
                                <%= listing.location %>
                            </div>
                            <div class="col-sm-4 mb-2">
                                <strong>Country:</strong>
                                <%= listing.country %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4">Edit</a>
                    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-danger px-4">Delete</button>
                    </form>
                </div>

            </div>
        </div>
    </div>